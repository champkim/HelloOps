{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "var1": "readonly",
    "var2": "writable"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 5], //단락 space 4
    "semi": ["error", "always"],
    "keyword-spacing": 0,
    "no-unused-vars": 1,
    "space-before-function-paren": 0,
    "prettier/prettier": "error"
  }
}
